@model Logic.Factura
@{
    ViewBag.Title = "Factura";
}

<div id="divGeneral">
    <div class="panel-heading">
        <div class="panel-title">
            <h2 style="text-align:center">Factura</h2>
            <hr />
        </div>
    </div>
    <div class="panel-body">

        <center class="">
            <h4>Datos del cliente</h4>
            <hr />
            <table style="width:25%">
                <tbody>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Cliente.ID, new { @class = "form-label" }):
                            @Html.DisplayFor(m => m.Cliente.ID, null, new { @class = "form-control" })
                        </td>
                        <td style="text-align:right">
                            @Html.LabelFor(m => m.Cliente.Nombre, new { @class = "form-label" }):
                            @Html.DisplayFor(m => m.Cliente.Nombre, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Cliente.Apellido, new { @class = "form-label" }):
                            @Html.DisplayFor(m => m.Cliente.Apellido, new { @class = "form-control" })
                        </td>
                        <td style="text-align:right">
                            @Html.LabelFor(m => m.Cliente.Direccion, new { @class = "form-label" }):
                            @Html.DisplayFor(m => m.Cliente.Direccion, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Cliente.Email, new { @class = "form-label" }):
                            @Html.DisplayFor(m => m.Cliente.Email, new { @class = "form-control" })
                        </td>
                        @if (Model.Cliente.GrupoTrabajo != null)
                        {
                            <td style="text-align:right">
                                @Html.Label("Grupo de trabajo:", null, new { @class = "form-label" })
                                @Html.DisplayFor(m => m.Cliente.GrupoTrabajo.Nombre, new { @class = "form-control" })
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
            <br /><br />
            <h4>Datos de la sala</h4>
            <hr />

            <center>

                @Html.Label("Identificador", null, new { @class = "form-label" })
                <span>@Model.Reserva.Sala.ID</span>
                <br />
                @Html.Label("Nombre", null, new { @class = "form-label" })
                <span>@Model.Reserva.Sala.TipoSala</span>
            </center>

            <br /><br />
            <h4>Resumen factura</h4>
            <hr />
            @Html.Label("Fecha desde", null, new { @class = "form-label" })
            <span>@Model.Reserva.Desde.ToShortDateString()</span>
            <br />
            @Html.Label("Fecha hasta", null, new { @class = "form-label" })
            <span>@Model.Reserva.Hasta.ToShortDateString()</span>
            <br />
            <table>
                <tbody>
                    <tr>
                        <td>
                            <b>IVA: </b>
                            <span>@Model.IVA</span>
                        </td>
                        <td style="width:2%"></td>
                        <td>
                            <b>Total: </b>
                            <span>@Model.TotalAPagar</span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <hr />
            <div style="width:20%">
                @Html.ActionLink("Volver", "List", "Reserva", null, new { @class = "btn btn-primary btn-lg btn-block" })
            </div>
        </center>



    </div>
</div>
